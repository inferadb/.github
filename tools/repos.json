    "topics": [
      "inferadb",
      "authorization",
      "access-control",
      "permissions",
      "rebac",
      "zanzibar",
      "fine-grained-access-control"
    ],
    "settings": {
      "delete_branch_on_merge": true,
      "allow_merge_commit": false,
      "allow_rebase_merge": true,
      "allow_squash_merge": true,
      "allow_auto_merge": true,
      "allow_forking": true,
      "allow_update_branch": true,
      "enable_issues": true,
      "enable_wiki": false,
      "enable_projects": false,
      "enable_discussions": false,
      "enable_secret_scanning": true,
      "enable_secret_scanning_push_protection": true,
      "enable_secret_scanning_validity_checks": true,
      "enable_secret_scanning_non_provider_patterns": true,
      "enable_secret_scanning_ai_detection": true,
      "web_commit_signoff_required": true,
      "enable_vulnerability_alerts": true,
      "enable_automated_security_fixes": true,
      "enable_private_vulnerability_reporting": true,
      "squash_merge_commit_title": "PR_TITLE",
      "squash_merge_commit_message": "BLANK"
    },
    "dependabot": {
      "schedule": {
        "interval": "weekly",
        "day": "monday",
        "time": "09:00",
        "timezone": "Etc/UTC"
      },
      "open_pull_requests_limit": 5,
      "commit_message": {
        "include_scope": true
      },
      "ecosystems": {
        "cargo": {
          "labels": ["area/deps"],
          "commit_prefix": "deps",
          "groups": {
            "rust-minor-patch": {
              "patterns": ["*"],
              "update-types": ["minor", "patch"]
            }
          }
        },
        "npm": {
          "labels": ["area/deps"],
          "commit_prefix": "deps",
          "groups": {
            "npm-minor-patch": {
              "patterns": ["*"],
              "update-types": ["minor", "patch"]
            },
            "npm-dev": {
              "patterns": ["*"],
              "dependency-type": "development"
            }
          }
        },
        "github-actions": {
          "labels": ["area/deps", "area/ci"],
          "commit_prefix": "ci",
          "groups": {
            "github-actions": {
              "patterns": ["*"]
            }
          }
        },
        "docker": {
          "labels": ["area/deps", "area/docker"],
          "commit_prefix": "docker",
          "open_pull_requests_limit": 3,
          "groups": {
            "docker-images": {
              "patterns": ["*"]
            }
          }
        },
        "gomod": {
          "labels": ["area/deps"],
          "commit_prefix": "deps",
          "groups": {
            "go-dependencies": {
              "patterns": ["*"]
            }
          }
        },
        "terraform": {
          "labels": ["area/deps"],
          "commit_prefix": "deps",
          "groups": {
            "terraform-providers": {
              "patterns": ["*"]
            }
          }
        }
      }
    }
  },

